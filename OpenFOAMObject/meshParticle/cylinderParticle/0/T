FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 273;

boundaryField
{
    topWall
    {
        type            zeroGradient;
    }

    bottomWall
    {
/*        type            fixedValue;*/
/*        value           uniform 800;*/

        type            codedFixedValue;
        value           uniform 273;
        name            heating;
        code            #{
            const scalar t = this->db().time().value();
            const scalar Ttemp = 273 + 10*t;
            operator==(Ttemp);
        #};

    }

    sideWallL
    {
        type            symmetry;
    }

    sideWallR
    {
        type            fixedValue;
        value           uniform 273;
/*        type            zeroGradient;*/
/*        type            fixedValue;*/
/*        value           uniform 800;*/
/*        type            codedFixedValue;*/
/*        value           uniform 273;*/
/*        name            heating;*/
/*        code            #{*/
/*            const scalar t = this->db().time().value();*/
/*            const scalar Ttemp = 273 + 1*t;*/
/*            operator==(Ttemp);*/
/*        #};*/
    }
    frontAndBack
    {
        type empty;
    }
}

